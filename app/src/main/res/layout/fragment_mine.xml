<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_color">
            <ImageView
                android:id="@+id/head_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_margin"
                android:src="@drawable/default_header"/>
            <RelativeLayout
                android:id="@+id/unlogin_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/head_img"
                android:visibility="gone">
                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="登录"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/default_margin"
                    android:textColor="@color/white"
                    android:background="@drawable/mine_login_register_btn_shape_bg"/>
                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="注册"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/login_btn"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/mine_login_register_btn_shape_bg"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/logined_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/head_img">
                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_text_size"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/first_black"/>
                <TextView
                    android:id="@+id/realname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/username_tv"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/second_black"
                    android:textSize="@dimen/second_content_text_size"/>
                <Button
                    android:id="@+id/loginout_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="登出"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/status_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="未登录"/>
</LinearLayout>