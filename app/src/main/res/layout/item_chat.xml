<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.msy.rrodemo.widget.ChatDateTextView
        android:id="@+id/date_tv"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="12:20"
        android:gravity="center"
        android:textColor="@color/third_black"
        android:visibility="gone"
        android:textSize="@dimen/second_content_text_size"/>
    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_tv"
        android:visibility="gone">
        <ImageView
            android:id="@+id/left_header_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_header"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/left_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="64dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/content_text_size"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:background="@drawable/chat_bubble_shape_bg"
            android:text=""/>
        <ImageView
            android:id="@+id/left_content_img"
            android:layout_width="140dp"
            android:layout_height="144dp"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_tv"
        android:visibility="gone">
        <ImageView
            android:id="@+id/right_header_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_header"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/right_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_toLeftOf="@id/right_header_img"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:background="@drawable/chat_bubble_shape_bg"
            android:textSize="@dimen/content_text_size"/>
        <ImageView
            android:id="@+id/right_content_img"
            android:layout_width="140dp"
            android:layout_height="144dp"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_toLeftOf="@id/right_header_img"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</RelativeLayout>